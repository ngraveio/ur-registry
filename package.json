{
  "name": "root",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Irfan Bilaloglu, Pieter Uyttersprot <irfanbilaloglu@gmail.com, pieter.u@hotmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "ur-packages/*"
  ],
  "scripts": {
    "start": "lerna run --parallel start",
    "commit": "git-cz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "test:update": "lerna run --parallel test:update",
    "lint": "lerna run --parallel lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "test:ci": "lerna run --parallel test:coverage",
    "watch": "tsc --watch",
    "build": "lerna run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.2",
    "commitlint-config-monorepo": "^2.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "git-commit-msg": "^0.3.0",
    "git-cz": "^4.9.0",
    "husky": "^6.0.0",
    "lerna": "^6.1.0",
    "nx": "15.9.2",
    "prettier": "^2.7.1",
    "typescript": "^4.6.3",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.1",
    "ts-jest": "^29.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
